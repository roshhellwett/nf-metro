%%metro title: Section Diamond
%%metro style: dark
%%metro line: left_path | Left Path | #e63946
%%metro line: right_path | Right Path | #0570b0

graph LR
    subgraph start [Start]
        input[Input]
        prep[Prepare]
        input -->|left_path,right_path| prep
    end

    subgraph branch_left [Branch Left]
        l1[Left Step 1]
        l2[Left Step 2]
        l3[Left Step 3]
        l1 -->|left_path| l2
        l2 -->|left_path| l3
    end

    subgraph branch_right [Branch Right]
        r1[Right Step 1]
        r2[Right Step 2]
        r1 -->|right_path| r2
    end

    subgraph finish [Finish]
        merge[Merge]
        report[Report]
        merge -->|left_path,right_path| report
    end

    prep -->|left_path| l1
    prep -->|right_path| r1
    l3 -->|left_path| merge
    r2 -->|right_path| merge
